# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==========================================
# ⚠️ NEVER commit actual production values to Git!
# This is a template - copy and fill with real values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
MONGO_URL=mongodb://localhost:27017/jobs_placements_prod
# For MongoDB Atlas (recommended for production):
# MONGO_URL=mongodb+srv://<username>:<password>@cluster.mongodb.net/jobs_placements?retryWrites=true&w=majority

# Frontend URLs (update with your actual production domains)
CLIENT_URL=https://your-frontend-domain.com
FRONTEND_URL=https://your-frontend-domain.com
PRODUCTION_URL=https://your-frontend-domain.com

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars_random_string_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_different_from_jwt_secret
JWT_REFRESH_EXPIRE=30d

# Cookie Configuration
COOKIE_EXPIRE=7
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=Job Placements Portal

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AWS S3 Configuration (alternative to Cloudinary)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=your-bucket-name

# Redis Configuration (for session management & caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW=15
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security
ENCRYPTION_KEY=your_32_char_encryption_key_here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/jobs-placements/app.log
ERROR_LOG_PATH=/var/log/jobs-placements/error.log

# Third-party Integrations
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Payment Gateway (if applicable)
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_ga_id

# API Keys
API_KEY_ENCRYPTION_SECRET=your_api_key_encryption_secret

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600000

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://your-frontend.com,https://www.your-frontend.com

# WebSocket Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Feature Flags
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Application URLs
BASE_URL=https://api.yourcompany.com
ADMIN_PANEL_URL=https://admin.yourcompany.com
