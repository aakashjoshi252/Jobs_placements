# ===============================
# PRODUCTION ENVIRONMENT TEMPLATE
# ===============================
# Copy this file to .env for production deployment
# NEVER commit actual .env file to version control

# Server Configuration
NODE_ENV=production
PORT=5000

# Database (MongoDB Atlas or Production MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobplacements?retryWrites=true&w=majority

# JWT Authentication (MUST be 32+ characters, use: openssl rand -base64 32)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRE=7d

# CORS Configuration
CLIENT_URL=https://your-frontend-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Email Configuration (Required for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@jobplacements.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET=your-secure-cookie-secret-key

# Redis (if using for caching/sessions)
# REDIS_URL=redis://username:password@host:port

# Monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key