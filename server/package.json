{
  "name": "job-placements-server",
  "version": "1.0.0",
  "description": "Job Placements Portal API Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:unit": "NODE_ENV=test jest --testPathPattern=tests/unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=tests/integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "validate-env": "node scripts/validate-env.js",
    "production-check": "node scripts/production-checks.js",
    "prestart": "npm run validate-env",
    "predeploy": "npm run production-check && npm run lint && npm test",
    "deploy:prepare": "npm install --production && npm run production-check",
    "db:seed": "node scripts/seed.js",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "logs:view": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log",
    "security:audit": "npm audit --production",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t job-placements-api .",
    "docker:run": "docker run -p 5000:5000 --env-file .env job-placements-api",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "pm2:start": "pm2 start server.js --name jobs-api --max-memory-restart 500M",
    "pm2:stop": "pm2 stop jobs-api",
    "pm2:restart": "pm2 restart jobs-api",
    "pm2:logs": "pm2 logs jobs-api",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "jobs",
    "placements",
    "recruitment",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "socket.io"
  ],
  "author": "Aakash Joshi",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/aakashjoshi252/Jobs_placements.git"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.19.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.12",
    "socket.io": "^4.8.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!server.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
