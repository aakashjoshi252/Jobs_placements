# ===================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with actual credentials!

# ===================================
# SERVER CONFIGURATION
# ===================================
NODE_ENV=production
PORT=3000

# ===================================
# DATABASE
# ===================================
# MongoDB Connection String
# Use MongoDB Atlas for production or your hosted MongoDB
# Example: mongodb+srv://<username>:<password>@cluster.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/jobs_placements?retryWrites=true&w=majority

# ===================================
# FRONTEND URLS
# ===================================
# Your production frontend URL (Vercel, Netlify, etc.)
CLIENT_URL=https://your-app.vercel.app
FRONTEND_URL=https://your-app.vercel.app
PRODUCTION_URL=https://your-app.vercel.app

# ===================================
# AUTHENTICATION & SECURITY
# ===================================
# Generate strong random strings for these values
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# JWT Secret (minimum 64 characters)
JWT_SECRET=your_super_secure_jwt_secret_minimum_64_characters_long_here

# JWT Expiration
JWT_EXPIRE=7d

# Cookie Expiration (in days)
COOKIE_EXPIRE=7

# Session Secret
SESSION_SECRET=your_session_secret_minimum_32_characters

# ===================================
# EMAIL CONFIGURATION
# ===================================
# SMTP Settings for sending emails (notifications, password resets, etc.)
# Use services like SendGrid, AWS SES, Mailgun, or Gmail

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@yourcompany.com
SMTP_FROM_NAME="Job Placements Portal"

# ===================================
# FILE UPLOAD & STORAGE
# ===================================
# Cloudinary Configuration (for resume and image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Max file size (in bytes) - 10MB default
MAX_FILE_SIZE=10485760

# ===================================
# PAYMENT INTEGRATION (Optional)
# ===================================
# Stripe Configuration (if implementing premium features)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===================================
# RATE LIMITING
# ===================================
# Requests per window
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Auth specific rate limiting
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# ===================================
# LOGGING
# ===================================
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs/production.log

# ===================================
# REDIS (Optional - for sessions/caching)
# ===================================
REDIS_URL=redis://username:password@host:port

# ===================================
# MONITORING & ANALYTICS
# ===================================
# Sentry for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics (optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ===================================
# OAUTH PROVIDERS (Optional)
# ===================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://your-api.com/api/v1/auth/google/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=https://your-api.com/api/v1/auth/linkedin/callback

# ===================================
# ADMIN CREDENTIALS
# ===================================
# Initial admin user (created on first run)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=change_this_secure_password

# ===================================
# CORS ORIGINS
# ===================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://your-app.vercel.app,https://www.your-domain.com

# ===================================
# API KEYS (Third-party services)
# ===================================
# Twilio for SMS notifications (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS Configuration (for S3 storage - alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true

# ===================================
# BACKUP & MAINTENANCE
# ===================================
MAINTENANCE_MODE=false
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"

# ===================================
# SSL/TLS (if managing your own certificates)
# ===================================
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# ===================================
# NOTES
# ===================================
# 1. Replace all placeholder values with actual production credentials
# 2. Keep this file secure and never commit to version control
# 3. Use environment variable management services like:
#    - Vercel Environment Variables
#    - Railway Environment Variables
#    - AWS Systems Manager Parameter Store
#    - Azure Key Vault
#    - HashiCorp Vault
# 4. Rotate secrets regularly
# 5. Use different credentials for each environment (dev, staging, prod)
